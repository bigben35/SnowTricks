{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Contact
{% endblock %}

{% block body %}
{# affichage des messages flash  #}
		{% include "partials/flash.html.twig" %}
<section class="container my-3">
	<h1>Contactez-nous !</h1>
	{{ form_start(contactForm) }}
	{{ form_row(contactForm.lastname) }}
	{{ form_row(contactForm.firstname) }}
	{{ form_row(contactForm.email) }}
	{{ form_row(contactForm.object) }}
	{{ form_row(contactForm.message) }}
	<button type="submit" class="btn btn-lg btn-primary mt-3">Envoyer</button>
	{{ form_end(contactForm) }}
</section>
{% endblock %}
