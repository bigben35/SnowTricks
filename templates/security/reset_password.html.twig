{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Réinitialisation du mot de passe
{% endblock %}

{% block body %}

	<section class="container mt-5 section-desktop"  style="margin-bottom: 35rem;">
		<div class="row text-center" style="max-width: 700px; margin: 0 auto;">
				<h1>Réinitialisation du mot de passe</h1>
			<div class="col form-register p-3" style="border: solid 3px grey;">
                {{ form_start(passForm) }}  {#} c'est le nom du formulaire se trouvant dans SecurityController #}
                {{ form_row(passForm.password) }} {# on précise cette ligne pour que le bouton soit en-dessous du champ username #}
                    <button type="submit" class="btn btn-lg btn-primary mt-3">Envoyer</button>
                {{ form_end(passForm) }}  {# on utilise form_start et form_end car bonnes pratiques de mettre le button dans template et pas dans form builder ResetPasswordRequestFormType#}
			</div>
		</div>
	</section>

{% endblock %}
