{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Connexion
{% endblock %}

{% block body %}

	<section class="container my-3 section-desktop">
		<div class="row">
			<div class="col">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes déjà connecté(e)
							<strong>{{ app.user.username }}</strong>,
							<a href="{{ path('app_logout') }}">Se Déconnecter</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal">Se Connecter</h1>
					<label for="inputUsername">Nom d'Utilisateur</label>
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-4" autocomplete="username" required autofocus>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control mb-4" autocomplete="current-password" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
					        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					        See https://symfony.com/doc/current/security/remember_me.html
					
					        <div class="checkbox mb-3">
					            <label>
					                <input type="checkbox" name="_remember_me"> Remember me
					            </label>
					        </div>
					    #}

					<button class="btn btn-lg btn-primary mt-3" type="submit">
						Connexion
					</button>
					<a href="{{ path('app_register') }}" class="btn btn-secondary mt-3 p-2">M' inscrire</a>
					<a href="{{ path('forgotten_password') }}">Mot de passe oublié ?</a>
				</form>
			</div>
		</div>
	</section>

{% endblock %}
