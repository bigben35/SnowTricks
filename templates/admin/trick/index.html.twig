{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Figures
{% endblock %}

{% block body %}
	<section class="container section-dashboard-admin">
		<h1>Les Figures</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th class="d-none">Description</th>
					<th class="d-none">Slug</th>
					<th class="d-none">Created_at</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for trick in tricks %}
					<tr>
						<td>{{ trick.name }}</td>
						<td class="d-none">{{ trick.description }}</td>
						<td class="d-none">{{ trick.slug }}</td>
						<td class="d-none">{{ trick.createdAt ? trick.createdAt|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('app_admin_trick_show', {'id': trick.id}) }}">Voir</a>
							<a href="{{ path('app_admin_trick_edit', {'id': trick.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">Pas de Figure</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div>
			<a href="{{ path('app_admin_trick_new') }}" class="btn btn-primary my-2">Cr√©er</a>
		</div>
		<div>
		<a href="{{ path('app_admin_admin') }}">Retour au dashboard</a>
		</div>
	</section>
{% endblock %}
