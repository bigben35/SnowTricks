{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
<section class="container section-dashboard-admin">
	<h1>Catégorie</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('app_admin_category_show', {'id': category.id}) }}">Voir</a>
						<a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Non Trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div>
		<a href="{{ path('app_admin_category_new') }}">Ajouter une catégorie</a>
	</div>
	<div>
		<a href="{{ path('app_admin_admin') }}">Retour au dashboard</a>
	</div>
    </section>
{% endblock %}
