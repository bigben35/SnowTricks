{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Page Trick
{% endblock %}

{% block body %}
	<h1>Toutes les figures</h1>
	<section class="d-flex flex-column m-4">
		<div class="d-flex flex-wrap justify-content-center">
			{% for trick in tricks %}
				<div class="m-3">
					<div class="card" style="width: 18rem;">

						<a href="{{path('trick_show', {slug:trick.slug})}}">
							{% set illustration = trick.illustrations | first %}
							{% if illustration %}
								<img src="{{asset('assets/uploads/images/' ~ illustration.file)}}" class="card-img-top border" style="height: 190px; object-fit: cover;">
							{% endif %}
							<div class="card-body">
								<h2 class="post-title">{{trick.name}}</h2>
							</div>
						</a>

					</div>
				</div>
			{% endfor %}
		</div>
		<!-- Trick preview-->
		<div class="d-flex justify-content-center pt-5">
			<a class="btn btn-primary text-uppercase" href="#!">Toutes les figures â†’</a>
		</div>
	</section>
{% endblock %}
