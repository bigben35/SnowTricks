{% block body %}

    <div class="container">
	{% for illustration in trick.illustrations %}
	{% if loop.first %}
        <header id="header-image" class="container bg-dark mb-5"

                style="background-image: url({{ asset('assets/uploads/images/' ~ illustration.file) }}); background-position: center; background-size: cover; border: 2px solid black;">
	{% endif %}
	{% endfor %}
            <div class="row h-100">
                <div class="col-sm-12 col-lg-3 order-3 order-lg-1 "></div>
                <div class="col-sm-12 col-lg-6 align-self-center text-center text-black order-2">
                    <h1 class="display-4 fw-bolder"
                        style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; background: white; padding: 10px">{{ trick.name }}</h1>
                </div>
                <div id="btn-edition"
                     class="col-sm-12 col-lg-3 my-2 align-self-start text-end order-1 order-lg-3">
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                        <a class="btn btn-dark text-white m-1" style="font-size: 1.5rem; padding:10px 16px;"
                           href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i class="fa-solid fa-pencil"></i></a>
						   <a class="btn btn-dark text-white m-1" style="font-size: 1.5rem; padding:10px 16px;"
                           href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i class="fa-solid fa-trash-can"></i></a>
                    {% endif %}
                </div>
            </div>

        </header>
        <!-- media -->

        <section id="box-media" class="d-none d-lg-flex flex-wrap justify-content-around align-items-center m-1">
            {% for illustration in trick.illustrations %}

                <div class="card m-1 p-2 rounded-lg" style="width: 250px;">
                    <!-- Illustrations-->
                    <img class="card-img-top" style="height: 161px; object-fit: cover;"
                    		src="{{ asset('assets/uploads/images/' ~ illustration.file) }}"
                    		alt="description image snow"/>
                </div>

            {% endfor %}

			{# VIDEOS  #}
            {% for video in trick.videos %}

                <div class="card m-1" style="width: 250px;">
                    <iframe width="250"
                            height="161"
                            src="{{ video.mediaLink|replace({'watch?v=': 'embed/'}) }}"
                            title="YouTube video player"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                </div>

            {% endfor %}

		</section>

		{# DESCRIPTION  #}
		<div>{{ trick.description }}</div>

			{# CATEGORIE  #}
			{% for category in trick.categories %}
				<div class="mx-4 px-3 py-1 border">{{ category.name }}</div>

			{% endfor %}

	

<div class="my-3">
	<h3>Commentaire(s) ({{ trick.commentTricks|length }}) :</h3>
	<ul id="post-container" class="list-group">
        {{ include('trick/_commentTricks.html.twig') }}
    </ul>

</div>
{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
	<div class="my-5">
		<h3>Ajouter un Commentaire :</h3>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button type="submit" class="btn btn-primary">
                Commenter
        </button>
        {{ form_end(form) }}
	</div>
{% endif %}
	</div>

