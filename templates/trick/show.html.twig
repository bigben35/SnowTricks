{% block body %}

	<div class="container mb-5 section-desktop">
		{% for illustration in trick.illustrations %}
			{% if loop.first %}
				<header id="header-image" class="container bg-dark mb-5" style="background-image: url({{ asset('assets/uploads/images/' ~ illustration.file) }}); background-position: center; background-size: cover; border: 2px solid black;">
				{% endif %}
			{% endfor %}
			<div class="row h-100">
				<div class="col-sm-12 col-lg-3 order-3 order-lg-1 "></div>
				<div class="col-sm-12 col-lg-6 align-self-center text-center text-black order-2">
					<h1 class="display-4 fw-bolder" style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; background: white; padding: 10px">{{ trick.name }}</h1>
				</div>
				<div id="btn-edition" class="col-sm-12 col-lg-3 my-2 align-self-start text-end order-1 order-lg-3">
					{% if is_granted('ROLE_ADMIN') or (app.user and trick.user.id == app.user.id) %}
						<a class="btn btn-dark text-white m-1" style="font-size: 1.5rem; padding:10px 16px;" href="{{ path('trick_edit', {'slug': trick.slug}) }}" onclick="return confirm('Etes-vous sûr de vouloir modifier cette figure?')">
							<i class="fa-solid fa-pencil"></i>
						</a>
                        {{ include('trick/_delete.html.twig') }}
						{# <a class="btn btn-dark text-white m-1" style="font-size: 1.5rem; padding:10px 16px;" href="{{ path('trick_delete', {'id': trick.id}) }}" onclick="return confirm('Etes-vous sûr de vouloir supprimer cette figure?')">
							<i class="fa-solid fa-trash-can"></i>
						</a> #}

					{% endif %}
				</div>
			</div>

		</header>

		<!-- MEDIAS -->

        <section id="box-medias" class="d-none d-lg-flex flex-wrap justify-content-around align-items-center m-1">
			{% for illustration in trick.illustrations %}

                <div class="card m-1 p-2 rounded-lg" style="width: 250px;">
                    <!-- Illustrations-->
                    <img class="card-img-top" style="height: 160px; object-fit: cover;"
                    		src="{{ asset('assets/uploads/images/' ~ illustration.file) }}"
                    		alt="description image snow"/>

                    <!-- Boutons pour éditer et supprimer l'illustration -->
                    <div class="mt-2">
                        <a href="#" class="btn btn-primary btn-sm" style="font-size: 1.5rem; padding:0.4rem 0.8rem;"><i class="fa-solid fa-pencil"></i></a>
                        <a href="#" class="btn btn-danger btn-sm" style="font-size: 1.5rem; padding:0.4rem 0.8rem;" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette illustration ?')"><i class="fa-solid fa-trash-can"></i></a>
                    </div>
                </div>

			{% endfor %}

			{# VIDEOS  #}
			{% for video in trick.videos %}


                <div class="card m-1 p-2 rounded-lg">
                    <iframe width="250"
                            height="160"
                            src="{{ video.mediaLink|replace({'watch?v=': 'embed/'}) }}"
                            title="YouTube video player"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>

                    <!-- Boutons pour éditer et supprimer une vidéo -->
                <div class="media-buttons" style="margin-top: 0.5rem;">
                    <a href="#" class="btn btn-primary btn-sm" style="font-size: 1.5rem; padding: 0.4rem 0.8rem;"><i class="fa-solid fa-pencil"></i></a>
                    <a href="#" class="btn btn-danger btn-sm" style="font-size: 1.5rem; padding: 0.4rem 0.8rem;" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette vidéo ?')"><i class="fa-solid fa-trash-can"></i></a>
                </div>
			</div>


			{% endfor %}

		</section>


        {# BTN MEDIAS  #}
        <div class="row text-center m-3 m-lg-0">
            <div>
                <button id="btn-medias" class="d-lg-none btn btn-primary mb-3">Voir Médias</button>
            </div>
        </div>

        <div class="container mt-4" style="max-width: 600px;">
            <div class="row"><p>Trick créé le: <strong>{{ trick.createdAt|date('d-m-Y') }}</strong></p></div>
            {# DESCRIPTION  #}
                <h4 class="mb-3">Description :</h4>
            <div class="row p-2 mb-4"  style="height: 200px; max-height: 200px; overflow-y: auto; border: solid 1px black;">{{ trick.description }}. D'où vient-il?
